extends layout

block content
    form(method = 'POST', action = '/create', enctype = 'multipart/form-data')
      input(type = 'file', name = 'image', id = 'image')
      br
      input(type = 'text', name = 'imageTitle', id = 'imageTitle', placeholder = 'Add image title here...') 
      br
      input(type = 'submit', value = 'Share Photo')
    ul
      for image in images
        li
          a(href = image.href)= image.title
          | &nbsp;
          a.destroy( href = '/images/' + image._id + '/destroy') &#215;